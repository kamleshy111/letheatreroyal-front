<IfModule mod_deflate.c>
    <FilesMatch "\.(html)$">
        SetOutputFilter DEFLATE
    </FilesMatch>
    <FilesMatch "\.(jpg|jpeg|gif|png|css)$">
        ExpiresActive on
        ExpiresDefault "access plus 365 days"
    </FilesMatch>
    <FilesMatch "\.(js|css|svg|woff|woff2)$">
        ExpiresActive on
        ExpiresDefault "access plus 365 days"
        SetOutputFilter DEFLATE
    </FilesMatch>
</IfModule>

SetEnv PHP_VALUE "upload_max_filesize 300M"
SetEnv PHP_VALUE "post_max_size = 300M"

RewriteEngine on
#RewriteRule ^robots.txt$     /robots.php [L]
#RewriteRule ^sitemap.xml     /sitemap.php [L]

RewriteRule ^([\w-]+)/$ /?page=$1 [NE,QSA,L]
RewriteRule ^([\w-]+)/([\w-]+)/$ /?cat=$1&page=$2 [NE,QSA,L]
RewriteRule ^([\w-]+)/([\w-]+)/([\d-]+)/$ /?page=$2&subpage=$3&idCategory=$4 [QSA,L]
RewriteRule ^([\w-]+)/([\w-]+)/([\w-]+)/([\d-]+)/$ /?page=$2&subpage=$2&id=$5 [QSA,L]

